<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>
	<!-- Install Replacement Factory Objects -->
	<factory>
		<faces-context-factory>org.salgar.jsf.context.JBPFacesContextFactoryImpl</faces-context-factory>
	</factory>
		
	<application>
		<!-- Enables Facelets -->
		<view-handler>org.salgar.jsf.viewhandler.JBPViewHandler</view-handler>
	</application>
</faces-config>
